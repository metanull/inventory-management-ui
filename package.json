{
  "name": "inventory-management-ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "test": "vitest run --exclude='**/*.integration.test.ts'",
    "test:unit": "vitest run --exclude='**/*.integration.test.ts'",
    "test:unit:watch": "vitest --exclude='**/*.integration.test.ts'",
    "test:unit:coverage": "vitest run --coverage --exclude='**/*.integration.test.ts'",
    "test:watch": "vitest --exclude='**/*.integration.test.ts'",
    "test:coverage": "vitest run --coverage --exclude='**/*.integration.test.ts'",
    "test:ui": "vitest --ui --exclude='**/*.integration.test.ts'",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:integration:watch": "vitest --config vitest.integration.config.ts",
    "test:integration:destructive": "VITE_RUN_DESTRUCTIVE_TESTS=true vitest run --config vitest.integration.config.ts",
    "test:integration:guided": "node scripts/run-integration-tests.mjs",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "type-check": "vue-tsc --noEmit",
    "prepare": "husky install"
  },
  "dependencies": {
    "vue": "^3.5.14",
    "vue-router": "^4.5.0",
    "pinia": "^2.3.1",
    "axios": "^1.7.9",
    "@vueuse/core": "^13.4.0",
    "@headlessui/vue": "^1.7.23",
    "@heroicons/vue": "^2.2.0",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "vite": "^7.0.0",
    "vue-tsc": "^2.2.10",
    "typescript": "~5.8.3",
    "vitest": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^25.0.1",
    "eslint": "^9.17.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint-plugin-vue": "^9.33.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.4.2",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.6",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "@types/node": "^22.10.2",
    "@pinia/testing": "^0.1.7"
  },
  "lint-staged": {
    "*.{vue,js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=22.17.0",
    "npm": ">=10.0.0"
  }
}
